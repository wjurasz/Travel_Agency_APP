@model ProjektSzkolenieTechniczne.Service.Command.Ticket.BuyTicket.BuyTicketCommand

@{
    ViewData["Title"] = "Buy Ticket";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="BuyTicket" method="post">
    <div class="form-group">
        <label asp-for="TourId" class="control-label"></label>
        <input asp-for="TourId" class="form-control" readonly />
        <span asp-validation-for="TourId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FlightId" class="control-label"></label>
        <input asp-for="FlightId" class="form-control" />
        <span asp-validation-for="FlightId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumbersOfTickets" class="control-label"></label>
        <input asp-for="NumbersOfTickets" class="form-control" />
        <span asp-validation-for="NumbersOfTickets" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Buy Ticket" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
