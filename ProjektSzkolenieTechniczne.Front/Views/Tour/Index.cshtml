@model IEnumerable<SzkolenieTechniczneService.Query.Dtos.TourDto>

@{
    ViewData["Title"] = "Tour List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="AddTour" class="btn btn-primary">Add New Tour</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Destination</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination)
                </td>
                <td class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a asp-action="EditTour" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="DeleteTour" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                    <a asp-controller="Ticket" asp-action="BuyTicket" asp-route-tourId="@item.Id" asp-route-flightId="@item.FlightId" class="btn btn-success">Buy Ticket</a>
                </td>
            </tr>
        }
    </tbody>
</table>
