@model IEnumerable<SzkolenieTechniczneService.Query.Dtos.TourDto>

@{
    ViewData["Title"] = "Tour List";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="AddTour" class="btn btn-primary">Add New Tour</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Destination)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination)
                </td>
                <td>
                    <a asp-action="EditTour" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteTour" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    <a asp-controller="Ticket" asp-action="BuyTicket" asp-route-tourId="@item.Id" class="btn btn-success">Buy Ticket</a>
                </td>
            </tr>
        }
    </tbody>
</table>
