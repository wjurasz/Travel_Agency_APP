@model ProjektSzkolenieTechniczne.Service.Command.Tour.Delete.DeleteTourCommand

@{
    ViewData["Title"] = "Delete Tour";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this tour?</h3>
<div>
    <h4>@Model.Destination</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Year
        </dt>
        <dd class="col-sm-10">
            @Model.Year
        </dd>
    </dl>
</div>

<form asp-action="DeleteTour" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
